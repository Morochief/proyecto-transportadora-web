# =============================================================================
# CONFIGURACIÓN DEL ENTORNO
# =============================================================================
# Copiar este archivo a .env y ajustar los valores según el entorno

# =============================================================================
# ENTORNO
# =============================================================================
FLASK_ENV=development
NODE_ENV=development

# =============================================================================
# SEGURIDAD - ¡CAMBIAR EN PRODUCCIÓN!
# =============================================================================
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_SECRET_KEY=change-this-to-another-random-secret-key-in-production

# Token expiration
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=7

# =============================================================================
# BASE DE DATOS
# =============================================================================
# Desarrollo
DATABASE_URL=postgresql://postgres:postgres@db:5432/logistica

# Producción (ejemplo)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# =============================================================================
# CORS Y FRONTEND
# =============================================================================
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Producción (ejemplo)
# CORS_ALLOW_ORIGINS=https://tu-dominio.com
# FRONTEND_URL=https://tu-dominio.com

# =============================================================================
# SMTP / EMAIL
# =============================================================================
# Desarrollo (Mailhog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USE_TLS=false
SMTP_USERNAME=
SMTP_PASSWORD=
MAIL_FROM=noreply@transportadora.local

# Producción (ejemplo Gmail)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USE_TLS=true
# SMTP_USERNAME=tu-email@gmail.com
# SMTP_PASSWORD=tu-app-password
# MAIL_FROM=noreply@tu-dominio.com

# =============================================================================
# ADMINISTRADOR POR DEFECTO
# =============================================================================
DEFAULT_ADMIN_EMAIL=admin@transportadora.local
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# =============================================================================
# SEGURIDAD AVANZADA
# =============================================================================
# Política de contraseñas
PASSWORD_MIN_LENGTH=12
PASSWORD_EXPIRATION_DAYS=90
PASSWORD_HISTORY_COUNT=5

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=10
LOGIN_ATTEMPT_WINDOW=15

# MFA
MFA_ISSUER_NAME=Transportadora

# =============================================================================
# AUDITORÍA Y LOGS
# =============================================================================
STRUCTURED_LOGGING=1
LOG_LEVEL=INFO

# SIEM Integration (opcional)
ENABLE_SIEM_HOOKS=false
AUDIT_SIEM_ENDPOINT=
AUDIT_SIEM_TOKEN=

# =============================================================================
# ZONA HORARIA
# =============================================================================
TIMEZONE=America/Asuncion

# =============================================================================
# REACT APP (Variables para el frontend)
# =============================================================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENV=development

# Producción
# REACT_APP_API_URL=https://api.tu-dominio.com/api
# REACT_APP_ENV=production

# =============================================================================
# DOCKER
# =============================================================================
# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=logistica

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@local
PGADMIN_DEFAULT_PASSWORD=admin123

# =============================================================================
# SERVICIOS ADICIONALES
# =============================================================================
# Go CRT API
GO_DATABASE_URL=postgres://postgres:postgres@db:5432/logistica?sslmode=disable

# PDF Service Port
PDF_SERVICE_PORT=3002
